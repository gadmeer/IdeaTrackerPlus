<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/new_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/dont_forget"
        android:textColor="@color/md_red_500"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

      <!--  <TextView
            android:id="@+id/lable_last_sync:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/default_menu_item_paddingLeft"
            android:text="@string/cloud_last_sync" />-->

        <TextView
            android:id="@+id/lable_last_synced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/default_menu_item_paddingLeft"
            android:text="@string/cloud_last_sync" />

        <TextView
            android:id="@+id/last_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/cloud_connect_gdrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cloud_connect_gdrive" />

    <Button
        android:id="@+id/cloud_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cloud_backup" />

    <Button
        android:id="@+id/cloud_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cloud_recovery" />


</LinearLayout>